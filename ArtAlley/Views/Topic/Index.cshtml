@model List<TopicModel>
@{
    Layout = "_Admin";
}
<div class="d-flex justify-content-between mb-5">
    <a class="btn btn-link" asp-area="" asp-controller="Admin" asp-action="Index">Назад</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Topic" asp-action="Add">Додати</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Url</th>
            <th scope="col">Назва</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Url</td>
                <td>@item.Title</td>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-controller="Topic" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                    <div class="btn btn-primary deleteItem" data-id="@item.Id">Видалити</div>
                </td>
            </tr>

        }
    </tbody>
</table>
@await Html.PartialAsync("_ConfirmModal")


@section Scripts {
    <script src="~/js/admin/topic/list.js" asp-append-version="true"></script>
}