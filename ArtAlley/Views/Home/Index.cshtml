@model List<TopicModel>
@{
}
@foreach (var item in Model)
{
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img class="rounded-circle mr-1" style="width: 50px; height: 50px; object-fit: cover" src="@item.ImagePath" alt="img" />
            <h2 class="card-title">@item.Title</h2>
        </div>
        <a class="btn btn-primary" asp-area="" asp-controller="@item.Url">Переглянути</a>
    </div>
    <hr/>
}
